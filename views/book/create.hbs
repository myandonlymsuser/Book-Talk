{{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
                <p>{{err}}</p>
            {{/each}}
        </div>
    </div>
{{/if}}

<section class="create-form-container">
    <form action="/book/create" method="post">
        <h3>Create Book Review</h3>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" class="box" value="{{old.title}}">
        <label for="author">Author</label>
        <input type="text" id="author" name="author" class="box" value="{{old.author}}">
        <label for="genre">Genre</label>
        <input type="text" id="genre" name="genre" class="box" value="{{old.genre}}">
        <label for="stars">Stars</label>
        <input type="number" id="stars" name="stars" class="box" value="{{old.stars}}">
        <label for="image">Image</label>
        <input type="text" id="image" name="image" class="box" value="{{old.image}}">
        <label for="review">Review</label>
        <textarea class="box" id="review" name="review">{{old.review}}</textarea>
        <input type="submit" value="Create" class="btn">
    </form>
</section>