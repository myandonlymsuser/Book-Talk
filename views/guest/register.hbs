{{#if errors}}
    <div>
        <div class="errorContainer">
            {{#each errors}}
                <p>{{err}}</p>
            {{/each}}
        </div>
    </div>
{{/if}}

<section class="register-form-container">
    <form action="/guest/register" method="post">
        <h3>Register</h3>
        <label for="email">Email</label>
        <input type="email" name="email" class="box" id="email" value="{{old.email}}">
        <label for="username">Username</label>
        <input type="text" name="username" class="box" id="username" value="{{old.username}}">
        <label for="password">Password</label>
        <input type="password" name="password" class="box" id="password" value="{{old.password}}">
        <label for="confirm">Confirm Password</label>
        <input type="password" name="confirm" class="box" id="confirm" value="{{old.confirm}}">
        <input type="submit" value="Register" class="btn">
        <p>Have an account ? <a href="/guest/login">Click here</a></p>
    </form>
</section>